{
  "app-id": "com.ss2gd.SS2GDrive",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.7",
  "sdk": "org.kde.Sdk",
  "command": "ss2gd",
  "finish-args": [
    "--share=network",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--device=dri",
    "--talk-name=org.freedesktop.portal.Desktop",
    "--filesystem=xdg-config/ss2gdrive:create",
    "--filesystem=xdg-download",
    "--filesystem=xdg-videos"
  ],
  "modules": [
    {
      "name": "ss2gdrive",
      "buildsystem": "simple",
      "build-options": {
        "build-args": ["--share=network"]
      },
      "build-commands": [
        "pip3 install --no-cache-dir --prefix=/app -r requirements.txt",
        "pip3 install --no-cache-dir --force-reinstall --no-deps --prefix=/app ./app",
        "install -Dm644 com.ss2gd.SS2GDrive.desktop /app/share/applications/com.ss2gd.SS2GDrive.desktop",
        "install -Dm644 com.ss2gd.SS2GDrive-shot.desktop /app/share/applications/com.ss2gd.SS2GDrive-shot.desktop",
        "install -Dm644 com.ss2gd.SS2GDrive.svg /app/share/icons/hicolor/scalable/apps/com.ss2gd.SS2GDrive.svg",
        "install -Dm644 com.ss2gd.SS2GDrive-shot.svg /app/share/icons/hicolor/scalable/apps/com.ss2gd.SS2GDrive-shot.svg",
        "install -Dm644 com.ss2gd.SS2GDrive-record.desktop /app/share/applications/com.ss2gd.SS2GDrive-record.desktop",
        "install -Dm644 com.ss2gd.SS2GDrive-record.svg /app/share/icons/hicolor/scalable/apps/com.ss2gd.SS2GDrive-record.svg"
      ],
      "sources": [
        {
          "type": "inline",
          "dest-filename": "requirements.txt",
          "contents": "google-api-python-client>=2.149.0\ngoogle-auth>=2.35.0\ngoogle-auth-oauthlib>=1.2.1\ndbus-next>=0.2.3\nPySide6>=6.7.2\n"
        },
        { "type": "dir",  "path": "../app", "dest": "app" },
        { "type": "file", "path": "../assets/com.ss2gd.SS2GDrive.desktop" },
        { "type": "file", "path": "../assets/com.ss2gd.SS2GDrive-shot.desktop" },
        { "type": "file", "path": "../assets/com.ss2gd.SS2GDrive.svg" },
        { "type": "file", "path": "../assets/com.ss2gd.SS2GDrive-shot.svg" },
        { "type": "file", "path": "../assets/com.ss2gd.SS2GDrive-record.desktop" },
        { "type": "file", "path": "../assets/com.ss2gd.SS2GDrive-record.svg" }
      ]
    }
  ]
}
